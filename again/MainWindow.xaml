<Window x:Class="again.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:again"
        mc:Ignorable="d"
        Title="MainWindow" Width="1920" Height="1080">
    <Grid>
        <MediaElement x:Name="player" HorizontalAlignment="Left" Margin="320,0,0,0" VerticalAlignment="Top" Width="1280" Height="800" Visibility="Hidden" MediaOpened="player_MediaOpened" LoadedBehavior="Manual" UnloadedBehavior="Manual"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="320,880,0,0" VerticalAlignment="Top" Width="1280" PreviewMouseLeftButtonUp="slider_PreviewMouseLeftButtonUp" IsMoveToPointEnabled="True" PreviewMouseLeftButtonDown="slider_PreviewMouseLeftButtonDown"/>
    </Grid>
</Window>
